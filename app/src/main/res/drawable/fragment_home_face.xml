<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 手指触摸时的 -->
    <item android:state_pressed="true" >
        <shape android:shape="oval" >
            <!-- 填充的颜色 -->
            <solid android:color="#22000000" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

</selector>
