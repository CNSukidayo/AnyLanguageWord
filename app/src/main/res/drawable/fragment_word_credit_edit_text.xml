<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:right="10dp" android:start="10dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/theme_color_pink" />
                </shape>
            </item>
            <item android:bottom="-30dp" android:right="20dp" android:start="20dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="@color/theme_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item android:right="10dp" android:start="10dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/theme_color_pink" />
                </shape>
            </item>
            <item android:bottom="-30dp" android:right="20dp" android:start="20dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="@color/dark_gray" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>