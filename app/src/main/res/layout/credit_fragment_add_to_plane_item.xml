<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="10dp"
    android:paddingEnd="8dp"
    android:id="@+id/credit_fragment_add_to_plane_item_layout"
    android:clickable="true"
    android:foreground="@drawable/item_gray_select"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/credit_fragment_divide_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_to_plane_image_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/divide"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/add_to_plane_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitCenter" />
</RelativeLayout>