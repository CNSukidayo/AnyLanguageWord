<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/credit_fragment_add_to_plane_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_home_post_cover_element_bg_radius_blr"
    android:paddingBottom="3dp">

    <com.gitee.cnsukidayo.traditionalenglish.ui.adapter.customview.RoundImageView
        android:id="@+id/fragment_home_post_cover_element_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:src="@drawable/post_cover0"
        app:layout_constraintBottom_toTopOf="@id/fragment_home_post_cover_element_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        roundiv:left_top_radius="@dimen/fragment_home_post_bg_radius"
        roundiv:right_top_radius="@dimen/fragment_home_post_bg_radius" />

    <TextView
        android:id="@+id/fragment_home_post_cover_element_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_post_cover_element_cover" />

    <ImageView
        android:id="@+id/fragment_home_post_cover_element_author_face"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_post_cover_element_title" />

    <TextView
        android:id="@+id/fragment_home_post_cover_element_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_home_post_cover_element_author_face"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_post_cover_element_title" />

    <ImageView
        android:id="@+id/fragment_home_post_cover_element_praise"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/praise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_home_post_cover_element_praise_count"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_post_cover_element_title" />

    <TextView
        android:id="@+id/fragment_home_post_cover_element_praise_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/zero"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_post_cover_element_title" />

</androidx.constraintlayout.widget.ConstraintLayout>