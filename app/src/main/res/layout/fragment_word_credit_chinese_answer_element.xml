<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/credit_fragment_add_to_plane_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="false"
    android:paddingStart="10dp"
    android:paddingEnd="8dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_word_credit_meaning_category_hint"
            android:layout_width="@dimen/fragment_word_credit_hint_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/adjective"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fragment_word_credit_textview_meaning_category_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/fragment_word_credit_radius_answer"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>