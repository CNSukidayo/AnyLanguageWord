<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_word_credit_dialog_section_min_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:background="@drawable/fragment_word_credit_edit_text"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="@string/min_value"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="@string/wave_sign"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/fragment_word_credit_dialog_section_max_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:background="@drawable/fragment_word_credit_edit_text"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="@string/max_value"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>