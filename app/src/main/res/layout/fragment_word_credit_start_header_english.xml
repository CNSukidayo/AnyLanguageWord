<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_word_credit_drawer_crediting_word"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/crediting_word"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fragment_word_credit_drawer_word_origin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/fragment_word_credit_drawer_crediting_word"
            android:text="@string/show_word_origin"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fragment_word_credit_drawer_word_phonetics"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@id/fragment_word_credit_drawer_word_origin"
            android:layout_alignBottom="@+id/fragment_word_credit_drawer_word_origin"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/fragment_word_credit_drawer_word_origin"
            android:gravity="center"
            android:text="@string/word_phonetics"
            android:textColor="@color/gray_black"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>