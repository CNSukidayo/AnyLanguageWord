<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment_drawer_navigation"
    app:startDestination="@id/main_navigation">

    <fragment
        tools:layout="@layout/fragment_main_adapter"
        android:id="@+id/main_navigation"
        android:name="com.gitee.cnsukidayo.traditionalenglish.activity.fragment.MainFragmentAdapter">
        <action
            android:id="@+id/action_placeholder_to_placeholder2"
            app:destination="@id/welcome_navigation" />
        <action
            android:id="@+id/action_main_navigation_to_navigation_i_start"
            app:destination="@id/navigation_i_start" />
    </fragment>
    <fragment
        android:id="@+id/welcome_navigation"
        tools:layout="@layout/fragment_welcome"
        android:name="com.gitee.cnsukidayo.traditionalenglish.activity.fragment.WelcomeFragment">
        <action
            android:id="@+id/action_placeholder2_to_placeholder3"
            app:destination="@id/placeholder3" />
        <action
            android:id="@+id/action_placeholder2_to_placeholder4"
            app:destination="@id/placeholder4" />
        <action
            android:id="@+id/action_welcome_to_main"
            app:destination="@id/main_navigation" />
    </fragment>
    <fragment android:id="@+id/placeholder3" />
    <fragment android:id="@+id/placeholder4" />
    <fragment
        android:id="@+id/navigation_i_start"
        android:name="com.gitee.cnsukidayo.traditionalenglish.activity.fragment.IStartFragment"
        tools:layout="@layout/fragment_i_start" />
</navigation>